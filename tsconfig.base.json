{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": false,
        "target": "ESNext",
        "strict": true,
        "outDir": "dist/",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
    },
    "include": ["src/**/*"]
}
